<Application
    x:Class="KECReader.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KECReader"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="NavButtonPressedBackgroundBrush" Color="White" Opacity="0.3" />
            <SolidColorBrush x:Key="NavButtonCheckedBackgroundBrush" Color="White" Opacity="0.2" />
            <SolidColorBrush x:Key="NavButtonHoverBackgroundBrush" Color="White" Opacity="0.1" />

            <SolidColorBrush x:Key="AppBackground" Color="#3399ff" />
            <SolidColorBrush x:Key="ColorPrimary" Color="#0080ff" />
            <SolidColorBrush x:Key="ColorTextPrimary" Color="#bdbdbd" />

        </ResourceDictionary>
    </Application.Resources>


</Application>

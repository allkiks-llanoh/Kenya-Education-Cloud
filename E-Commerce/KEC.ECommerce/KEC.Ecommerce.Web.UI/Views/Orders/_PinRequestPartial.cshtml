@model PinRequestViewModel
<div class="row">
    <div class="cell-md-full">
        <div class="ui horizontal divider">
            <p class="text-center text-bold text-upper fg-orange"><span class="mif-note"></span>Voucher: @Model.VoucherCode</p>
        </div>
    </div>
</div>
<div class="row">
    <div class="cell-md-full">
        @{
            await Html.RenderPartialAsync("_ValidationErrorPartial");
        }
    </div>
</div>
<div class="row">
    <div class="cell-md-6 h-center">
        <form class="m-2" asp-controller="Orders" asp-action="CompletePayment" asp-antiforgery="true"
              asp-route-orderId="@Model.OrderId" asp-route-voucherCode="@Model.VoucherCode" 
              data-ajax="true" data-ajax-update="#payment" data-ajax-method="POST" data-ajax-success="showValidationErrorInfoBox"
              data-ajax-mode="replace" data-ajax-loading="#spinner">
            <div class="ui segment">
                <div class="field">
                    <input type="text" required data-role="input" placeholder="Enter voucher pin"
                           name="voucherPin" asp-for="@Model.VoucherPin" data-prepend="<span>Pin:</span>"
                           data-clear-button="false">
                    <button class="button info outline rounded mt-2">Submit Pin</button>
                </div>
            </div>
        </form>
    </div>
</div>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@ViewData["Title"] | KEC Store</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/owl/css/owl.theme.default.min.css" />
        <link rel="stylesheet" href="~/lib/owl/css/animate.css" />
        <link rel="stylesheet" href="~/lib/owl/css/owl.carousel.min.css" />
        <link rel="stylesheet" href="~/css/fluid-typography.css" />
        <link rel="stylesheet" href="~/css/ribbon.css" />
        <link rel="stylesheet" href="~/css/spinner.css" />
        <link rel="stylesheet" href="~/lib/semantic-ui/components/divider.min.css" />
        <link rel="stylesheet" href="~/lib/metro/css/metro-all.min.css" />
        <link rel="stylesheet" href="~/lib/simple-pagination/css/simplePagination.css" />
        <link rel="stylesheet" href="~/lib/semantic-ui/components/form.min.css" />
        <link rel="stylesheet" href="~/lib/semantic-ui/components/segment.min.css" />
        <link rel="stylesheet" href="~/lib/semantic-ui/components/step.min.css" />
        <link rel="stylesheet" href="~/lib/semantic-ui/components/message.min.css" />
        <link rel="stylesheet" href="~/css/tables.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Production">

        <link rel="stylesheet" href="https://cdn.metroui.org.ua/v4/css/metro-all.min.css"
              asp-fallback-href="~/lib/metro/css/metro-all.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/lib/owl/css/owl.theme.default.min.css" />
        <link rel="stylesheet" href="~/lib/owl/css/animate.css" />
        <link rel="stylesheet" href="~/lib/owl/css/owl.carousel.min.css" />
        <link rel="stylesheet" href="~/lib/semantic-ui/components/divider.min.css" />
        <link rel="stylesheet" href="~/lib/semantic-ui/components/form.min.css" />
        <link rel="stylesheet" href="~/lib/semantic-ui/components/segment.min.css" />
        <link rel="stylesheet" href="~/lib/semantic-ui/components/message.min.css" />
        <link rel="stylesheet" href="~/lib/semantic-ui/components/step.min.css" />
        <link rel="stylesheet" href="~/css/fluid-typography.css" />
        <link rel="stylesheet" href="~/css/ribbon.css" />
        <link rel="stylesheet" href="~/css/spinner.css" />
        <link rel="stylesheet" href="~/css/tables.css" />
        <link rel="stylesheet" href="~/lib/simple-pagination/css/simplePagination.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    </environment>
    
</head>
<body>
    <header class="app-bar bg-red  fg-white app-bar-expand-md" data-role="appbar" id="main-appbar">
        <button type="button" class="hamburger menu-down hidden"><span class="line"></span><span class="line"></span><span class="line"></span></button>
        <a href="/" class="">
            <img src="~/images/white-logo.png" style="width:110px; height:60px!important;" />
        </a>
        <ul class="app-bar-menu">
            <li><a asp-action="Index" asp-controller="Home"><span class="mif-home icon"></span>Home</a></li>
            <li>@await Component.InvokeAsync("ProductsMenu")</li>
            <li><a href="#"><span class="mif-info icon"></span>About</a></li>
            <li id="shoppingcart">@await Component.InvokeAsync("ShoppingCart")</li>
        </ul>
        @if (User.Identity.IsAuthenticated)
        {
            <ul class="app-bar-menu ml-auto">
                <li><a asp-action="Dashboard" asp-active-route asp-hide-if-active="true" asp-controller="Account"><span class="mif-apps icon"></span>Dashboard</a></li>
                <li>
                    <a href="#" class="logout">
                        <form asp-action="Logout" id="logout-form" class="hidden" asp-controller="Account" method="POST"></form>
                        <span class="mif-user icon"></span>
                        @string.Concat("Logout", " ", User.FindFirst("DisplayName")?.Value)
                    </a>
                </li>

            </ul>
        }
        else
        {
            <ul class="app-bar-menu ml-auto">
                <li><a asp-action="Login" asp-controller="Account" asp-active-route asp-hide-if-active="true"><span class="mif-user icon"></span>Login</a></li>
                <li><a asp-controller="Account" asp-action="Register" asp-active-route asp-hide-if-active="true"><span class="mif-pencil icon"></span>Register</a></li>
            </ul>

        }
    </header>
    <div id="wrap" class="border bd-green">
        <div class="loading hidden" id="spinner">
            <div class="cssload-preloader">
                <div class="cssload-loader-inner">
                    <div class="cssload-cssload-loader-line-wrap-wrap">
                        <div class="cssload-loader-line-wrap"></div>
                    </div>
                    <div class="cssload-cssload-loader-line-wrap-wrap">
                        <div class="cssload-loader-line-wrap"></div>
                    </div>
                    <div class="cssload-cssload-loader-line-wrap-wrap">
                        <div class="cssload-loader-line-wrap"></div>
                    </div>
                    <div class="cssload-cssload-loader-line-wrap-wrap">
                        <div class="cssload-loader-line-wrap"></div>
                    </div>
                    <div class="cssload-cssload-loader-line-wrap-wrap">
                        <div class="cssload-loader-line-wrap"></div>
                    </div>
                </div>
            </div>
        </div>
        <div id="content" class="">
            <div class="grid">
                <div class="row">
                    <div class="cell-md-12 cell-sm-12">
                        <div class="p-1 m-1">
                            <div class="row">
                                <div class="cell-md-full">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <breadcrumb asp-homepage-title="Account"
                                                    asp-homepage-url="@Url.Action("Dashboard", "Account", values: new { area = "" })"
                                                    asp-homepage-glyphicon="mif-user icon" style="background-color:#e8e8e8;"></breadcrumb>

                                    }
                                    else
                                    {
                                        <breadcrumb asp-homepage-title="Home"
                                                    asp-homepage-url="@Url.Action("Index", "Home", values: new { area = "" })"
                                                    asp-homepage-glyphicon="mif-home icon" style="background-color:#e8e8e8;"></breadcrumb>

                                    }
                                </div>
                            </div>
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="fg-white bg-red" id="footer">
            <footer class="footer-bg">
                
                    <div class="row" style="padding-top:20px;">
                        <div class="cell-md-3">
                            <img alt="Kenya Education Cloud" src="~/images/white-logo.png" style="width:110px; margin-left:90px; height:60px!important;" >
                            <p style="text-align:center;">
                                <b>Kenya Education Cloud</b><br>
                                2018 © Copyright
                            </p>
                        </div>
                        <div class="cell-md-3">
                            <h5>External Links</h5>

                            <ul style="font-size:12px;">
                                <li> <a target="_blank" style="color: inherit;" href="https://kicd.ac.ke/">Kenya Institute of Curriculum Development</a></li>

                                <li><a target="_blank" style="color: inherit;" href="http://www.education.go.ke/">Ministry of Education</a></li>
                                <li><a target="_blank" style="color: inherit;" href="http://icta.go.ke/">ICT Authority</a></li>
                                <li><a target="_blank" style="color: inherit;" href="http://icta.go.ke/digischool/">DigiSchool</a></li>
                                <li><a target="_blank" style="color: inherit;" href="http://www.tvetauthority.go.ke/">TVET Authority</a></li>
                                <li><a target="_blank" style="color: inherit;" href="http://elimika.ac.ke/">Elimika</a></li>
                                <li><a target="_blank" style="color: inherit;" href="http://kicdinteractivecontent.ac.ke/">Interactive Digital Content</a></li>
                                <li><a target="_blank" style="color: inherit;" href="https://www.knec.ac.ke/">Kenya National Examinations Council</a></li>
                            </ul>
                        </div>
                        <div class="cell-md-3">
                            <h5>Quick Links </h5>
                            <ul style="font-size:12px;">
                                <li><a style="color: inherit;" asp-controller="Home" asp-action="Index">Home</a></li>
                                @await Component.InvokeAsync("ProductsQuickLinks")
                                <li><a asp-action="Register" asp-controller="Account" style="color: inherit;">Register</a></li>

                            </ul>
                        </div>
                        <div class="cell-md-3">
                            <h5>Our Contacts</h5>

                            <p style="font-size:12px;">
                                <b>Kenya Education Cloud</b><br>
                                Desai Rd, Off Muranga Rd,<br>
                                Nairobi, Kenya.
                                <br>
                                <b>Phone Number</b><br>
                                +254 20 3749900 <br>
                                <b>Email</b> <br>
                                info@kicd.ac.ke
                            </p>
                        </div>
                    </div>
                    @*<div class="text-center mt-1 reduce-1">
                            <b>Kenya Education Cloud &copy; All Rights Reserved</b>
                        </div>*@
                
            </footer>
        </div>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/jquery-3.3.1.min.js"></script>
        <script src="~/lib/jquery/jquery.unobtrusive-ajax.min.js"></script>
        <script src="~/lib/jquery/jquery.matchHeight-min.js"></script>
        <script src="~/lib/metro/js/metro.min.js"></script>
        <script src="~/lib/simple-pagination/js/jquery.simplePagination.js"></script>
        <script src="~/lib/owl//js/owl.carousel.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/jquery-3.3.1.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous">
        </script>
        <script src="~/lib/jquery/jquery.unobtrusive-ajax.min.js"></script>
        <script src="~/lib/jquery/jquery.matchHeight-min.js"></script>
        <script src="~/lib/simple-pagination/js/jquery.simplePagination.js"></script>
        <script src="https://cdn.metroui.org.ua/v4/js/metro.min.js" asp-fallback-src="~/lib/metro/js/metro.min.js"
                crossorigin="anonymous">
        </script>
        <script src="~/lib/owl/js/owl.carousel.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>

@using KEC.Curation.UI.Models;
@model ChiefCurators
@{
    /**/

    ViewBag.Title = "Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <script src="@Url.Content("~/js/ReverseAssignmenttPrincipalCurator.js")"></script>
    <script src="@Url.Content("~/Scripts/plugins/typehead/bootstrap3-typeahead.min.js")"></script>
}
@{

    var PublicationId = Request.Params["Id"];
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="text-center m-t-lg">
                <h1>
                    @ViewData["SubTitle"]
                </h1>
                <small>@ViewData["Message"]</small>
                <br>
                <br>
                <hr />
                <div class="col-lg-8 col-lg-offset-2">
                    <div class="panel panel-default" style="padding:10px;">
                        <h5>Are you sure you want to reverse the assignment?</h5>
                        <input type="hidden" name="Id" id="Id" class="form-control" value="@PublicationId">
                        <a href="/PrincipalCurator/Delete" class="btn btn-danger">No</a>
                        <button type="submit" id="ReverseAssignmnet" style="background-color:#00b95f;" class="btn btn-primary">Yes</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="form-group col-md-10">
    <input type="text" name="CurrentUserGuid" id="CurrentUserGuid" class="form-control hidden" value="@Model.Guid">
</div>
<div class="form-group col-md-10">
    <input type="text" name="publicationIdValue" id="publicationIdValue" class="form-control hidden" value="@PublicationId">
</div>


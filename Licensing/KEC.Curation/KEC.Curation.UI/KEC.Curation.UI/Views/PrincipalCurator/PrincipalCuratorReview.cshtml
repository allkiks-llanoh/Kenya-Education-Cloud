<script type="text/javascript">
    $(document).ready(function () {

        $('.summernote').summernote();
        $('#LoadContent').click(loadContentFunction);

    });

    var edit = function () {
        $('.click2edit').summernote({ focus: true });
    };

    var save = function () {
        var aHTML = $('.click2edit').code(); //save HTML If you need(aHTML: array).
        $('.click2edit').destroy();
    };
    function loadContentFunction(e) {
        e.preventDefault();
        var check = $('#MimeTypes').val();
        if (check == "application/pdf") {
            $('pdfView').show();
        }
        if (check == "application/x-zip-compressed") {
            $('htmlView').show();
        }
    }
</script>

@using KEC.Curation.UI.Models;
@model ChiefCurators
@{
    ViewBag.Title = "Publications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts
{
    @Scripts.Render("~/plugins/datatables")
    @Scripts.Render("~/plugins/bootstrap3-typeahead")
    @Scripts.Render("~/js/chiefCuratorPublications")

}

<div class="tabs-container">
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#tab-unassigned" style="background-color:red; color:white;" aria-expanded="true">Unassigned Publications</a></li>
        <li class=""><a data-toggle="tab" href="#tab-assigned" style="background-color:#00B85F; color:white;" aria-expanded="false">Assigned Publications</a></li>
        <li class=""><a data-toggle="tab" href="#tab-history" style="background-color:black;  color:white;" aria-expanded="false">Publications History</a></li>
    </ul>
    <div class="tab-content">
        <div id="tab-unassigned" class="tab-pane active">
            <div class="panel-body">
                <div class="wrapper wrapper-content animated fadeInRight">
                    <div class="row">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="ibox float-e-margins">
                                    <div class="ibox-content">
                                        <div class="ibox-title">
                                            <h5>Type subject to load:</h5>

                                        </div>
                                        <div class="row">
                                            <div class="col-lg-8 col-md-6 col-sm-12 col-xs-12">
                                                <input placeholder="Start typing subject..." class="form-control m-b" id="unassigned-subjects-list" style="" type="text">
                                            </div>
                                            <div class="col-lg-4 col-lg-8 col-md-6 col-sm-12 col-xs-12 m-b">
                                                <a href="#" class="btn btn-primary" type="button" style="background-color:#00B85F;" id="load-unassigned-publications"><strong>Load publications</strong></a>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="ibox float-e-margins">
                                    <div class="ibox-title">
                                        <h5>Listing Unassigned Publications</h5>

                                    </div>
                                    <div class="ibox-content">

                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered table-hover dataTables-example"
                                                   data-publicationurl="@ViewBag.AssignPublicationUrl" id="unassigned-publications">
                                                <thead>
                                                    <tr>
                                                        <th>Title</th>
                                                        <th>Description</th>
                                                        <th>KICD Number</th>
                                                        <th>Price</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>

                                            </table>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="tab-assigned" class="tab-pane">
            <div class="panel-body">
                <div class="wrapper wrapper-content animated fadeInRight">
                    <div class="row">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="ibox float-e-margins">
                                    <div class="ibox-content">
                                        <div class="ibox-title">
                                            <h5>Type subject to load:</h5>

                                        </div>
                                        <div class="row">
                                            <div class="col-lg-8 col-md-6 col-sm-12 col-xs-12">
                                                <input placeholder="Start typing subject..." class="form-control m-b" id="assigned-subjects-list" style="" type="text">
                                            </div>
                                            <div class="col-lg-4 col-lg-8 col-md-6 col-sm-12 col-xs-12 m-b">
                                                <a href="#" class="btn btn-primary" type="button" id="load-assigned-publications"><strong>Load publications</strong></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="ibox float-e-margins">
                                    <div class="ibox-title">
                                        <h5>Listing Publications Assigned to curators</h5>

                                    </div>
                                    <div class="ibox-content">

                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered table-hover dataTables-example" id="assigned-publications" data-publicationurl="@ViewBag.ViewPublicationUrl">
                                                <thead>
                                                    <tr>
                                                        <th>Title</th>
                                                        <th>Description</th>
                                                        <th>KICD Number</th>
                                                        <th>Price</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>

                                            </table>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="tab-history" class="tab-pane">
            <div class="panel-body">
                <div class="wrapper wrapper-content animated fadeInRight">
                    <div class="row">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="ibox float-e-margins">
                                    <div class="ibox-content">
                                        <div class="ibox-title">
                                            <h5>Type subject to load:</h5>

                                        </div>
                                        <div class="row">
                                            <div class="col-lg-8 col-md-6 col-sm-12 col-xs-12">
                                                <input placeholder="Start typing subject..." class="form-control m-b" id="history-subjects-list" style="" type="text">
                                            </div>
                                            <div class="col-lg-4 col-lg-8 col-md-6 col-sm-12 col-xs-12 m-b">
                                                <a href="#" class="btn btn-primary" type="button" id="load-history-publications"><strong>Load publications</strong></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="ibox float-e-margins">
                                    <div class="ibox-title">
                                        <h5>Listing Previous Publications</h5>

                                    </div>
                                    <div class="ibox-content">

                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered table-hover dataTables-example" id="history-publications">
                                                <thead>
                                                    <tr>
                                                        <th>Title</th>
                                                        <th>Description</th>
                                                        <th>KICD Number</th>
                                                        <th>Price</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>

                                            </table>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group col-md-10">
            <input type="text" name="CurrentUserGuid" id="CurrentUserGuid" class="form-control hidden" value="@Model.Guid">
        </div>
        <div class="form-group col-md-10">
            <input type="text" name="SubjectId" id="SubjectId" class="form-control hidden" value="@Model.Subjectid">
        </div>
    </div>


</div>

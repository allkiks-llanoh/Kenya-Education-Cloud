@using KEC.Curation.UI.Models;
@model ChiefCurators
@{
    /**/

    ViewBag.Title = "Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{

    <script src="@Url.Content("~/Scripts/plugins/typehead/bootstrap3-typeahead.min.js")"></script>
}
@{

    var PublicationId = Request.Params["PublicationId"];
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="text-center m-t-lg">
                <h1>
                    @ViewData["SubTitle"]
                </h1>
                <small>@ViewData["Message"]</small>
                <br>
                <br>
                <hr />
                <div class="col-lg-8 col-lg-offset-2">
                    <div class="panel panel-default" style="padding:10px;">
                        <h5>Are you sure you want to reverse the assignment?</h5>
                        <input type="hidden" name="Id" id="Id" class="form-control" value="@PublicationId">
                        <a href="/ChiefCurator/ReverseList" class="btn btn-danger">No</a>
                        <button type="submit" id="ReverseAssignmnet" style="background-color:#00b95f;" class="btn btn-primary">Yes</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="form-group col-md-10">
    <input type="text" name="CurrentUserGuid" id="CurrentUserGuid" class="form-control hidden" value="@Model.Guid">
</div>
<div class="form-group col-md-10">
    <input type="text" name="publicationIdValue" id="publicationIdValue" class="form-control hidden" value="@PublicationId">
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#ReverseAssignmnet').click(reverseAssignment);
    });
    function reverseAssignment(e) {
        e.preventDefault();
        let publicationId = $('#publicationIdValue').val();
        let currentUser = $('#CurrentUserGuid').val();
        let url = apiBaseUrl.concat(`/chiefcurator/reverse`);
        $.ajax({
            headers : {
                'Accept' : 'application/json',
                'Content-Type' : 'application/json'
            },
            url: url,
            type: 'DELETE',
            contentType: 'application/json',
            crossDomain: true,
            accepts: 'application/json',
            data: JSON.stringify({ Id: publicationId, UserGuid: currentUser }),

            statusCode: {
                404: () => { ShowAlert("Publication could not be found", 'error'); },
                403: () => { ShowAlert("You are not authorized to process this"); },
                500: () => { ShowAlert("Something went wrong while processing", 'error'); }
            }
        }).success(function (data, textStatus, jqXHR) {
            console.log(data)
            ShowAlert("Success, assignment reversed", 'success');
            window.location.assign("https://curation.kec.ac.ke/ChiefCurator/ReverseList");
        }).fail(function (data, textStatus, jqXHR) {
            console.log(data)
            ShowAlert("There was an error, please try again", 'error');
        });
    }
</script>


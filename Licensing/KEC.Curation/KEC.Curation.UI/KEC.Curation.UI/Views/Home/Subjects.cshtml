@{
    ViewBag.Title = "Subjects";
}
@section Scripts
{
    <script src="@Url.Content("~/Scripts/globalConstants.js")"></script>
    <script src="@Url.Content("~/js/Subjects.js")"></script>
    <script src="@Url.Content("~/Scripts/plugins/typehead/bootstrap3-typeahead.min.js")"></script>
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="text-center m-t-lg">
                <h1>
                    @ViewData["SubTitle"]
                </h1>
                <small>@ViewData["Message"]</small>
                <br>
                <br>

                <div class="row">
                    <div class="col-sm-2">
                        <label for="Title">Category</label>
                    </div>
                    <div class="col-sm-6">
                        <select name="SubjectTypeId" id="SubjectTypeId" class="form-control"></select>
                    </div>
                </div>
                <br>
                <div class="row align-left">
                    <div class="col-sm-2">
                        <label for="Name">Name</label>
                    </div>
                    <div class="col-sm-6">
                        <input type="text" name="Name" id="Name" class="form-control" placeholder="Enter Name">
                    </div>
                    <div class="col-sm-4">
                        <button type="submit" id="btn-postFile"  style="background-color:#00b95f;" class="btn btn-w-m btn-primary pull-right">CREATE SUBJECT</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
